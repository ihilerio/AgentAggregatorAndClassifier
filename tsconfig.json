{
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2015", "ES2018","ESNext", "dom"],
    "target": "ES2022",
    "moduleResolution" : "node",
    "esModuleInterop" : true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "types":["node", "mocha"],
    "typeRoots": [
      "node_modules/@types", "./src/types"
    ],
    "skipLibCheck": true,
    "strict": false
  },
  "include" : [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}